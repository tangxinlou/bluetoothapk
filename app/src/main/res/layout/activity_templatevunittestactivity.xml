<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/infor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="test\ntest\ntest\ntest"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        android:layout_marginTop="10dip"
        android:gravity="center">

        <Button
            android:id="@+id/btn_check_before_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="前置环境检查" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        android:layout_marginTop="10dip"
        android:gravity="center">

        <Button
            android:id="@+id/btn_start_search"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="开始"
            />

        <Button
            android:id="@+id/btn_setting"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dip"
            android:text="设置"
            android:layout_toEndOf="@id/btn_start_search"
            />

        <Button
            android:id="@+id/btn_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:layout_toEndOf="@id/btn_setting"
            android:text="总结" />
    </RelativeLayout>

    <ListView
        android:id="@+id/result_main_record_panel"
        android:divider="#B4B3B3"
        android:dividerHeight="1.0dip"
        android:scrollbars="none"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:layout_marginTop="0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>
</LinearLayout>
